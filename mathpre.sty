% 首页图片
\RequirePackage{tikz}
\usetikzlibrary{fadings}
\newcommand{\background}[1]%
    {\newcommand{\mathpre@background}{#1}}

\tikzfading[
    name=title page picture fading,
    left color=transparent!0,
    right color=transparent!100,
]

\setbeamertemplate{title page}{%
    \begin{minipage}{.7\textwidth}
        \raggedright
        \usebeamerfont{title}
        \inserttitle

        \usebeamertemplate{separator}

        \usebeamerfont{author}
        \vspace{2em}
        \insertauthor

        \vspace{2em}
        \usebeamerfont{details}
        \insertinstitute

        \insertdate
    \end{minipage}

    \ifdefined\mathpre@background
    \begin{tikzpicture}[remember picture, overlay]
        % 剪裁图片
        \clip (current page.south east)
           -- (current page.north east)
           -- ++(-10, 0)
           -- ++(-3, -\paperheight)
           -- cycle;

        % 设置图片
        \node[
            anchor=east,
            inner sep=0,
            outer sep=0
        ] at (current page.east) {
            \includegraphics[height=0.8\paperheight]
                {\mathpre@background}
        };
    \end{tikzpicture}
    \fi
}

